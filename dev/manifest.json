{
    "manifest_version": 3,
    "name": "DocumentPIP",
    "version": "0.0.5",
    "description": "Add Document PIP fuctionality everywhere",
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "host_permissions": [
        "<all_urls>"
    ],
    "externally_connectable": {
        "matches": [ "<all_urls>" ]
    },
    "permissions": [
        "activeTab",
        "scripting",
        "webNavigation",
        "storage"
    ],
    "action": {
        "default_title": "Pipette",   
        "default_popup": "popup/popup.html"
    },
    "web_accessible_resources": [
        {
            "resources": [ "player/script.js", "player/style.css", "player/player.html" ],
            "matches": [ "<all_urls>" ]
        }
    ]
} 